@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<div class="container text-center mt-5">
    <!-- Header Section -->
    <h1 class="text-info font-weight-bold mb-4">Interactive Counter</h1>

    <!-- Count Display Section -->
    <div class="text-center">
        <p role="status" class="lead text-dark mb-4">Current count: <span class="h3 text-primary">@currentCount</span></p>

        <!-- Increment Button -->
        <button class="btn btn-lg btn-success shadow-lg" @onclick="IncrementCount">
            <i class="fas fa-plus-circle me-2"></i> Increment Count
        </button>
    </div>

    <!-- Footer Section -->
    <footer class="mt-5 text-muted">
        <p>&copy; 2025 Blazor Dashboard App | All rights reserved.</p>
    </footer>
</div>

<style>
    /* Font Styles */
    .font-weight-bold {
        font-weight: bold;
    }

    /* Button Styles */
    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        color: white;
        font-size: 1.1rem;
    }

    .btn-lg {
        padding: 0.8rem 2rem;
    }

    .shadow-lg {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2), 0 4px 12px rgba(0, 0, 0, 0.1);
    }

    /* Count Display */
    .h3 {
        font-size: 2rem;
        color: #007bff;
        font-weight: bold;
    }

    /* Footer Styling */
    footer {
        font-size: 0.9rem;
        padding: 1rem;
        background-color: #f8f9fa;
    }

    /* Text Styling */
    .text-dark {
        color: #343a40;
    }

    .text-info {
        color: #17a2b8;
    }

    .lead {
        font-size: 1.2rem;
        font-weight: 500;
    }
</style>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
